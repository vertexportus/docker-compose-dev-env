#!/usr/bin/env bash

exec_command() {
    if [[ -n "$1" ]]; then
        shell="/bin/sh"
        arguments=($*);
        for argument; do
            if [[ $argument = "--bash" ]]; then
                shell="/bin/bash"
            fi
        done
        docker-compose exec $1 $shell
    else
        printf "\n\e[31mNo service specified to bash into\e[0m\n"
    fi
}

if [[ -n $ENV_HELP ]]; then
    printf "\e[36mopens a 'shell' terminal inside specified container: \e[36;1m$ENV_COMMAND shell <container> [--bash (use bash shell)]\e[0m\n"
else
    exec_command $*
    printf "\n"
fi